<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page_Inscription">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="S'inscrire"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="22dp"
            android:textSize="32dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="24dp">

            <EditText
                android:id="@+id/editTextPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Prenom"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/editTextNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Nom"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"
                 />
            <EditText
                android:id="@+id/editTextNumberTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Telephone"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Age"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/editTextAdresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Adresse"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/editTextNumberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_backgroud_field"
                android:ems="10"
                android:hint="Mot de passe"
                android:inputType="textEmailAddress"
                android:paddingBottom="25dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp" />

            <Button
                android:id="@+id/btnInscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:backgroundTint="#3F2E56"
                android:text="S'inscrire"
                android:textSize="20sp"
                android:background="#3F2E56"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:text="Vous avez un compte? Connectez-vous"
                android:textAlignment="center"
                android:textColor="#2196F3"
                />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>